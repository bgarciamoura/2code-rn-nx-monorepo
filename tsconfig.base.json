{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": [
      "development"
    ],
    "paths": {
      "@tocode/ui": [
        "./packages/ui/src/index"
      ],
      "@tocode/host": [
        "./apps/host/src/index"
      ]
    }
  },
  "references": [
    {
      "path": "./packages/ui/tsconfig.json"
    },
    {
      "path": "./apps/host/tsconfig.json"
    }
  ]
}
